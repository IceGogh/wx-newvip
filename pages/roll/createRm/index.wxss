page {
  background: #edf2f5;
  text-align: center;
}

.common-header {
  border: none;
  color: #fff;
  position: relative;
  z-index: 10;
  background: transparent;
}

.common-header .backBtn{
  background-image: url(https://match.steampp.com/mobile/static/wx/account/arrowLeft2.png);
}

.headerBg {
  width: 100%;
  height: 208rpx;
  position: absolute;
  top: 0;
  left: 0;
  background: url(https://match.steampp.com/mobile/static/wx/roll/create1Top.png) no-repeat center center;
  background-size: cover;
}

.roomInfo {
  width: 92%;
  height: auto;
  border-radius: 27rpx;
  background: #fff;
  position: relative;
  z-index: 20;
  margin: 20rpx 4%;
}

.photo {
  width: 90%;
  height: 118rpx;
  margin: 0 auto;
  position: relative;
}

.photo image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  position: absolute;
  top: 14rpx;
  left: 10rpx;
}

.photo view {
  padding: 0 12rpx;
  height: 90rpx;
  line-height: 90rpx;
  position: absolute;
  top: 14rpx;
  left: 120rpx;
}

.roomInfo .rmItem {
  width: 100%;
  height: 91rpx;
  color: #666666;
  border-top: 2rpx solid #edf2f5;
  position: relative;
  font-size: 28rpx;
}

.roomInfo .rmItem > view:nth-child(1) {
  width: 160rpx;
  height: 91rpx;
  line-height: 91rpx;
  margin-left: 20rpx;
}

.roomInfo picker {
  width: 160rpx;
  height: 91rpx;
  position: absolute;
  top: 0;
  line-height: 91rpx;
}

.roomInfo .timeSel{
  right: 0;
}

.roomInfo .dateSel {
  right: 170rpx;
}

.rmItem input {
  position: absolute;
  text-align: right;
  top: 0;
  right: 30rpx;
  width: 320rpx;
  height: 91rpx;
  line-height: 91rpx;
}
.roomInfo .note {
  height: 180rpx;
}
.rmItem textarea {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 460rpx;
  height: 152rpx;
  text-align: left;
}


.BtnArea {
  width: 100%;
  height: 97rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  font-size: 30rpx;
}

.BtnArea .cancle {
  width: 40%;
  background: #fff;
  height: 97rpx;
  line-height: 97rpx;
  float: left;
}

.BtnArea .next {
  width: 60%;
  background: #ffc63f;
  color: #fff;
  height: 97rpx;
  line-height: 97rpx;
  float: left;
}