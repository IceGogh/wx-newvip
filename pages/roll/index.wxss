page {
  background: #fff;
}
.headerPart {
  width: 100%;
  height: 114rpx;
  background: #fff;
  position: relative;
  font-size: 30rpx;
}

.headerPart .input {
  width: 576rpx;
  height: 63rpx;
  position: absolute;
  top: 25rpx;
  left: 48rpx;
  border-radius: 31rpx;
  background: #edf2f5;
}

.headerPart .input input {
  width: 70%;
  margin-left: 42rpx;
  height: 63rpx;
  line-height: 63rpx;
}

.headerPart .input view {
  position: absolute;
  width: 63rpx;
  height: 63rpx;
  right: 20rpx;
  top: 0;
  background: url(https://match.steampp.com/mobile/static/wx/roll/rollFind.png) no-repeat center center;
  background-size: 40rpx;
}

.headerPart .createRoom {
  position: absolute;
  width: 63rpx;
  height: 63rpx;
  right: 40rpx;
  top: 25rpx;
  border-radius: 50%;
  background: #ffc63f;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
  font-size: 56rpx;
}

.roll {
  width: 100%;
  height: 76rpx;
  font-size: 30rpx;
  color: #28292f;
  display: flex;
  justify-content: space-around;
}

.roll > view {
  width: 22%;
  height: 76rpx;
  line-height: 76rpx;
  float: left;
  text-align: center;
}

.roll .selectList{
  color: #ffb300;
  position: relative;
}

.roll .selectList::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  background: #ffb300;

}

swiper-item {
  background: #edf2f5;
}

.rollList{
  margin: 28rpx auto 0;
  background: #fff;
}

.rollList .rollroom{
  width: 100%;
  box-sizing: border-box;
  padding: 2% 4%;
}

.rollroom > view:nth-child(1){
  width: 100%;
  height: 84rpx;
  position: relative;
  margin-top: 20rpx;
}

.rollroom .photo {
  position: absolute;
  top: 0;
  left: 0;
  width: 84rpx;
  height: 84rpx;
}

.rollroom .photo image{
  width: 100%;
  height: 100%;
  float: left;
  border-radius: 42rpx;
}

.rollroom .name {
  width: 590rpx;
  height: 45rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.rollroom .name .player {
  width: 166rpx;
  height: 45rpx;
  line-height: 45rpx;
  color: #5d5f68;
  float: left;
}

.rollroom .name .timeout{
  float: right;
  color: #a4a6ab;
  font-size: 28rpx;
}

.rollroom .nub {
  position: absolute;
  top: 45rpx;
  right: 0;
  width: 590rpx;
  height: 30rpx;
  font-size: 28rpx;
}

.rollroom .nub .roomnub {
  width: 195rpx;
  line-height: 30rpx;
  height: 30rpx;
  float: left;
  color: #9da0a5;
  position: relative;
}

.rollroom .roomnub .roomLock{
  position: absolute;
  top: 0;
  right: -34rpx;
  width: 30rpx;
  height: 30rpx;
  background: url(https://match.steampp.com/mobile/static/wx/roll/roomLock.png) no-repeat center center;
  background-size: 20rpx;
}

.rollroom .nub .time {
  float: right;
  width: 230rpx;
  height: 30rpx;
  line-height: 30rpx;
  color: #5d5f68;
  text-align: right;
}

.rollroom > view:nth-child(2) {
  width: 100%;
  height: 105rpx;
  margin: 10rpx 0 20rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
}

.rollroom .img{
  width: 158rpx;
  height: 105rpx;
  background: url(https://roll.vipgame.com/mobile/static/roll/images/rollmo.jpg) no-repeat center center;
  background-size: cover;
  overflow: hidden;
}

.rollroom .img image {
  width: 100%;
  height: 100%;
  float: left;
}

.rollroom .nubinfo {
  width: 100%;
  height: 66rpx;
}

.rollroom  .nubinfo > view {
  float: left;
  width: 50%;
  height: 66rpx;
}

.rollroom  .playerNub {
  box-sizing: border-box;
  border-right: 2rpx solid #edf2f5;
}

.playerNub > view:nth-child(1){
  height: 26rpx;
  line-height: 26rpx;
  color: #ee6a0e;
  text-align: center;
  font-size: 28rpx;
}
.playerNub > view:nth-child(2){
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 26rpx;
}

.propsNub > view:nth-child(1){
  height: 26rpx;
  line-height: 26rpx;
  color: #ee6a0e;
  text-align: center;
  font-size: 28rpx;
}
.propsNub > view:nth-child(2){
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 26rpx;
}

.loading {
  width: 100%;
  height: 50rpx;
  background: url(https://match.steampp.com/mobile/static/wx/roll/loading.gif) no-repeat center center;
  background-size: 36rpx;
}
