.msgItem {
  width: 94%;
  height: 148rpx;
  margin: 0 auto;
  border-bottom: .7rpx solid #edf2f5;
  position: relative;
  font-size: 28rpx;
}

.msgItem .bg {
  width: 101rpx;
  height: 101rpx;
  background: url(https://match.steampp.com/mobile/static/wx/account/message1.png) no-repeat center center;
  background-size: 96rpx;
  position: absolute;
  top: 17rpx;
  left: 0;
}

.msgItem .title {
  position: absolute;
  top: 26rpx;
  left: 120rpx;
}

.msgItem .msg {
  position: absolute;
  width: 494rpx;
  top: 78rpx;
  left: 120rpx;
}

.msgItem .time {
  position: absolute;
  text-align: right;
  width: 110rpx;
  height: 100rpx;
  top: 30rpx;
  right: 4rpx;
}

