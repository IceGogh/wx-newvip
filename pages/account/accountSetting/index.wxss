page{
  height: 100%;
  background-color:#edf2f5;
}
.common-header {
  background-color: #fff;
}
.section {
  margin-top: 10rpx;
  width: 100%;
}

.section .item{
  position: relative;
  font-size: 32rpx;
  text-indent: 50rpx;
}

.section .item image{
  width: 95rpx;
  height: 95rpx;
  border-radius: 50%;
  position: absolute;
  top: 5rpx;
  right: 98rpx;
}

.section .item:nth-child(4){
  margin-top: 17rpx;
}
.section .item:nth-child(5){
  margin-bottom: 17rpx;
}

.section .name {
  position: absolute;
  width: 40%;
  height: 104rpx;
  line-height: 104rpx;
  top: 0;
  right: 98rpx;
}

.signOut {
  height: 104rpx;
  line-height: 104rpx;
  text-align: center;
  font-size: 33rpx;
  background-color: #fff;
}

.chooseImg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(10, 10, 10, .8);
}
.chooseImg .ImgBox{
  position: absolute;
  width: 100%;
  height: 464rpx;
  top: 228rpx;
  left: 0;
}

.ImgBox image {
  position: absolute;
  top: 0;
  width: 100%;
  max-height: 484rpx;
}

.ImgBoxCheck {
  width: 100%;
  height: 464rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.ImgBoxCheck > view {
  float: left;
}

.ImgBoxCheck .bg{
  width: 143.5rpx;
  height: 464rpx;
  background: rgba(10, 10, 10, .6);
}

.ImgBoxCheckBox {
  width: 464rpx;
  height: 464rpx;
  box-sizing: border-box;
  background: transparent;
  border: 0.5rpx #fff solid;
}

.btnArea {
  width: 560rpx;
  height: 84rpx;
  line-height: 84rpx;
  background: #fff;
  font-size: 32rpx;
  border-radius: 42rpx;
  text-align: center;
  position: absolute;
  bottom: 60rpx;
  left: 101rpx;
}

.btnArea  > view {
  width: 50%;
  height: 84rpx;
  position: relative;
  float: left;
}
.btnArea::after {
  content: '';
  position: absolute;
  right: 50%;
  top: 25rpx;
  width: 2rpx;
  height: 36rpx;
  background: #c4c4c4;
}